<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home.HomeFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">
            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="@string/pilih_benua"
            style="@style/TitleStyle"/>

        <androidx.cardview.widget.CardView
            style="@style/CardViewHome"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">
            <Spinner
                android:id="@+id/spinner_benua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="@string/pilih_jenjang_pendidikan"
            style="@style/TitleStyle"/>

        <androidx.cardview.widget.CardView
            style="@style/CardViewHome"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">
            <Spinner
                android:id="@+id/spinner_jenjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="@string/pilih_tipe_pendanaan"
            style="@style/TitleStyle" />

        <androidx.cardview.widget.CardView
            style="@style/CardViewHome"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp">
            <Spinner
                android:id="@+id/spinner_biaya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/recommenderButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:text="@string/recommend_me"
            android:backgroundTint="@color/light_blue" />

        <TextView
            android:text="Hasil Rekomendasi Beasiswa"
            style="@style/TitleStyle" />

        <androidx.cardview.widget.CardView
            style="@style/CardViewHome"
            app:cardCornerRadius="8dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="20dp">
            <Spinner
                android:id="@+id/spinner_rekomendasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/getInfoButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="10dp"
            android:text="Dapatkan Info Beasiswa"
            android:backgroundTint="@color/light_blue" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_beasiswa"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            tools:listitem="@layout/item_scholarship" />

    </LinearLayout>

</ScrollView>