<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/itemCardView"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/scholarshipImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_detail"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">

            <TextView
                android:id="@+id/scholarshipNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/inpex"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                style="@style/ItemLinearLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    style="@style/IconItem"
                    android:src="@drawable/ic_loc"/>
                <TextView
                    style="@style/TextItem"
                    android:id="@+id/locationTextView"
                    android:text="@string/jepang"/>
            </LinearLayout>

            <LinearLayout
                style="@style/ItemLinearLayout">
                <ImageView
                    style="@style/IconItem"
                    android:src="@drawable/ic_ipk"/>
                <TextView
                    style="@style/TextItem"
                    android:id="@+id/ipkTextView"
                    android:text="@string/min_ipk"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
